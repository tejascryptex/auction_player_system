<%= form_with model: @draw_player, url: team_draw_players_path(@team), local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :role %>
    <%= f.select :role, ["Batsman", "Bowler", "All-Rounder", "Wicket-Keeper"] %>
  </div>

  <%= f.submit "Add Lucky Draw Player" %>
<% end %>
