 <header class="bg-white border-b shadow-sm">
      <div class="max-w-7xl mx-auto px-4 py-4 flex items-center space-x-3">
        <i class="bi bi-trophy-fill text-yellow-500 text-xl"></i>
        <h1 class="text-lg sm:text-xl font-semibold text-gray-900">Godhni Premier League</h1>
      </div>
    </header>
  <%= yield %>
</body>

<div class="min-h-screen bg-gray-50 flex flex-col items-center justify-center px-4">
  <div class="w-full max-w-md bg-white shadow-xl rounded-xl p-8">
    <div class="text-center mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-2">Welcome to the GPL-2</h2>
      <p class="text-sm text-gray-500">Let’s get your team set up. Please enter your team and owner name to begin.</p>
    </div>

    <%= form_with model: @team, url: teams_path, local: true, html: { multipart: true } do |form| %>
      <!-- Team Name -->
      <div class="mb-4">
        <%= form.label :team_name, "Team Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :team_name, placeholder: "e.g. The Champions", class: "w-full border rounded-lg px-4 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Team Logo Upload -->
      <div class="mb-4">
        <%= form.label :logo, "Upload Team Logo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.file_field :logo, class: "block w-full text-sm text-gray-700 file:mr-4 file:py-2 file:px-4 file:border-0 file:font-semibold file:bg-blue-100 file:text-blue-700 hover:file:bg-blue-200 rounded-lg" %>
      </div>

      <!-- Owner Name -->
      <div class="mb-4">
        <%= form.label :owner_name, "Owner Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :owner_name, placeholder: "e.g. Virat Kohli", class: "w-full border rounded-lg px-4 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Owner Avatar Upload -->
      <div class="mb-6">
        <%= form.label :owner_avatar, "Upload Owner Photo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.file_field :owner_avatar, class: "block w-full text-sm text-gray-700 file:mr-4 file:py-2 file:px-4 file:border-0 file:font-semibold file:bg-purple-100 file:text-purple-700 hover:file:bg-purple-200 rounded-lg" %>
      </div>

      <%= form.submit "Create Team →", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200" %>
    <% end %>
  </div>
</div>
