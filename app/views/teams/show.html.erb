
<!-- Page Wrapper -->
<div class="min-h-screen bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50">
<div class="bg-white/30 backdrop-blur-md border-b border-white/20 shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-4 flex items-center justify-between flex-wrap">

    <!-- Left: Icon and Title -->
    <div class="flex items-center gap-3">
      <i class="bi bi-trophy-fill text-yellow-500 text-3xl"></i>
      <div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2">
        <h1 class="text-lg sm:text-xl font-bold text-gray-800">Godhni Premier League</h1>
        
      </div>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to download_players_pdf_team_path(@team),
          class: "inline-flex items-center bg-white/20 backdrop-blur-md bg-blue-100 text-blue-600 hover:bg-blue-200 text-sm font-medium px-4 py-2 rounded-lg border border-white/30 shadow-sm transition whitespace-nowrap" do %>
        <i class="bi bi-download mr-2"></i>  Download PDF
      <% end %>
    </div>

  </div>
</div>
<br>
  <div class="card mb-5">
    <div class="max-w-7xl mx-auto px-6 mt-6">
      <%= link_to 'â† Back to Setup', new_team_path, class: "text-sm bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-md shadow-sm inline-block" %>
    </div>
  </div>

  <!-- Main Grid -->
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">

      <!-- Left Panel -->
      <div class="lg:col-span-4 space-y-6">

        <!-- Team Info -->
        <div class="bg-white rounded-xl shadow-md p-6 space-y-4">
        <!-- Header -->
        <div>
          <h2 class="text-lg font-semibold text-gray-800">Team & Owner Details</h2>
          <p class="text-sm text-gray-500">Your team and owner information.</p>
        </div>
        <hr><br><br>

        <!-- Team Name -->
        <div class="flex items-center bg-gray-50 p-4 rounded-lg space-x-3">
          <i data-lucide="shield" class="w-5 h-5 text-blue-500"></i>
          <div>
            <p class="text-xs text-gray-500 font-medium">Team Name</p>
            <p class="text-base font-semibold text-gray-900"><%= @team.team_name %></p>
          </div>
        </div>
            <br>
        <!-- Team Owner -->
        <div class="flex items-center bg-gray-50 p-4 rounded-lg space-x-3">
          <i data-lucide="user" class="w-5 h-5 text-blue-500"></i>
          <div>
            <p class="text-xs text-gray-500 font-medium">Team Owner</p>
            <p class="text-base font-semibold text-gray-900"><%= @team.owner_name %></p>
          </div>
        </div>
      </div>

        <!-- Staff Section -->
        <div class="bg-white p-6 rounded-2xl shadow-xl">
          <div class="flex justify-between items-center mb-4">
            <div>
              <h2 class="font-semibold text-md text-gray-700">Management & Staff</h2>
              <p class="text-sm text-gray-500">Your team's coaches, physios & staff.</p>
            </div>
            <button onclick="document.getElementById('staffModal').classList.remove('hidden')" class="bg-white border border-gray-300 text-gray-700 px-4 py-1.5 rounded-lg hover:bg-gray-50">+ Add</button>
          </div>

          <% @team.staff_members.each do |staff| %>
            <div class="flex items-center justify-between border rounded-lg p-3 mb-2 bg-white hover:shadow transition">
              <div class="flex items-center gap-3">
                <div>
                  <p class="text-gray-800 font-medium"><%= staff.name %></p>
                  <% badge_classes = case staff.role
                    when 'Coach'
                      'bg-blue-100 text-blue-800'
                    when 'Physio'
                      'bg-green-100 text-green-800'
                    when 'Manager'
                      'bg-yellow-100 text-yellow-800'
                    when 'Assistant Coach'
                      'bg-purple-100 text-purple-800'
                    else
                      'bg-gray-100 text-gray-700'
                  end %>

                  <span class="text-xs px-2 py-1 rounded-full font-medium <%= badge_classes %>"><%= staff.role %></span>
                </div>
              </div>

              <%= button_to "ðŸ—‘", team_staff_member_path(@team, staff), method: :delete,
                  class: "text-red-600 hover:text-red-800 text-sm", data: { confirm: "Remove this staff member?" } %>
            </div>
          <% end %>

        </div>
      </div>

      <!-- Right Panel -->
      <div class="lg:col-span-8 space-y-10">

        
        <div class="bg-white p-6 rounded-2xl shadow-xl">
          <h2 class="text-lg font-semibold text-gray-800 mb-1">Manage Purse & Acquire Players</h2>
          <p class="text-sm text-gray-500 mb-4">Acquire Best Players For Your Squad.</p>
          <div class="bg-gray-100 text-center py-6 rounded-xl mb-6">
            <div class="text-gray-600 text-sm font-medium uppercase">Available Purse</div>
            <div class="text-3xl font-bold text-gray-900 mt-1">â‚¹ <%= number_with_delimiter(@team.available_purse) %></div>
            <% if @team.available_purse <= 0 %>
              <p class="mt-2 text-red-500 text-sm font-semibold">Your purse has been exhausted.</p>
            <% end %>
          </div>

          <% if @team.available_purse > 0 %>
            <%= form_with model: [@team, Player.new], data: { turbo: false } do |f| %>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-5">
                <%= f.text_field :name, placeholder: "e.g. Virat Kohli", class: "border px-4 py-2 rounded-lg w-full text-sm focus:outline-none focus:ring focus:border-blue-300", required: true %>
                <%= f.select :role, ["All-Rounder", "Right-Hand Batsman","Left-Hand Batsman","Right-arm Bowler","Left-arm Bowler", "Wicket-Keeper"], {}, class: "border px-4 py-2 rounded-lg w-full text-sm focus:outline-none focus:ring focus:border-blue-300" %>
                <%= f.number_field :price, placeholder: "0", min: 0, class: "border px-4 py-2 rounded-lg w-full text-sm focus:outline-none focus:ring focus:border-blue-300", required: true %>
              </div>
              <%= f.submit "Aquire Player", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow" %>
            <% end %>

          <% end %>
        </div>
        <!-- Player Table -->
        <div class="bg-white p-6 rounded-2xl shadow-xl">
          <h2 class="text-lg font-semibold text-gray-800 mb-1">Your Team</h2>
          <p class="text-sm text-gray-500 mb-4">A list of all players currently on your team.</p>
          <% if @team.players.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm text-left rounded-xl overflow-hidden">
                <thead>
                  <tr class="border-b text-gray-500 uppercase text-xs bg-gray-50">
                    <th class="py-2 px-4">No.</th>
                    <th class="py-2 px-4">Name</th>
                    <th class="py-2 px-4">Role</th>
                    <th class="py-2 px-4">Price</th>
                    <th class="py-2 px-4">Action</th>
                  </tr>
                </thead>
                <tbody class="text-gray-800">
                  <% @team.players.each_with_index do |player, index| %>
                    <tr class="border-b hover:bg-gray-50">
                      <td class="py-3 px-4"><%= index + 1 %></td>
                      <td class="py-3 px-4 font-medium flex items-center gap-1">
                        <%= player.name %>
                        <% if player.name == @team.owner_name %>
                          <span title="Owner" class="text-yellow-500 text-sm"><i data-lucide="crown" class="w-4 h-4 text-yellow-500"></i></span>
                        <% end %>
                      </td>
                      <td class="py-3 px-4">
                        <span class="text-xs px-2 py-1 rounded-full font-medium inline-flex items-center 
                        <%= case player.role 
                        when 'Right-Hand Batsman' then 'bg-red-200 text-red-800' 
                        when 'Left-Hand Batsman' then 'bg-amber-100 text-amber-700' 
                        when 'Right-arm Bowler' then 'bg-blue-100 text-blue-700' 
                        when 'Left-arm Bowler' then 'bg-yellow-100 text-yellow-700' 
                        when 'All-Rounder' then 'bg-purple-100 text-purple-700' 
                        when 'Wicket-Keeper' then 'bg-orange-200 text-orange-700'
                         else 'bg-gray-100 text-gray-600' end %>"><%= player.role %></span>
                      </td>
                      <td class="py-3 px-4"><%= number_with_delimiter(player.price) %></td>
                      <td class="py-3 px-4">
                        <% unless player.name == @team.owner_name || player.id.nil? %>
                          <%= button_to player_path(player), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 text-sm" do %>ðŸ—‘<% end %>
                        <% else %>
                          <span class="text-gray-400 text-sm">â€”</span>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No players have been added yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Add Staff Modal -->
<div id="staffModal" class="fixed inset-0 bg-black/30 backdrop-blur-sm flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-lg p-6 w-full max-w-md shadow-xl relative">
      <h3 class="text-lg font-semibold mb-4">Add Management Staff</h3>
      <%= form_with model: [@team, StaffMember.new], local: true, html: { multipart: true } do |f| %>
        <div class="mb-3">
          <%= f.label :name, "Staff Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, placeholder: "e.g. John Wright", class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        <div class="mb-3">
          <%= f.label :role, "Role", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :role, ["Coach", "Assistant Coach", "Physio", "Manager"], {}, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        
        <div class="flex justify-end space-x-2">
          <button type="button" onclick="document.getElementById('staffModal').classList.add('hidden')" class="bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-md">Cancel</button>
          <%= f.submit "Add to Team", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector("form[action*='players']");
    if (!form) return;

    const priceField = form.querySelector("input[name='player[price]']");
    const purseElement = document.querySelector(".text-3xl.font-bold.text-gray-900");

    if (!priceField || !purseElement) return;

    const availablePurse = parseInt(purseElement.textContent.replace(/[â‚¹, ]/g, ""));

    form.addEventListener("submit", function (e) {
      const enteredPrice = parseInt(priceField.value);

      if (isNaN(enteredPrice)) return; // Allow blank or invalid prices to be handled by validation

      if (enteredPrice > availablePurse) {
        e.preventDefault();
        alert("Insufficient purse! You can't add a player for more than â‚¹" + availablePurse.toLocaleString());
      }
    });
  });
</script>
